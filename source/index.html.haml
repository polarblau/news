%article
  %section
    Last build happened at:
    = Time.new.to_s

    %p
      Random number betweem 0 and 100:
      = rand(0..100)

  %section#hacker-news
    %header
      %h2
        Hacker News
    %ul
      - data.hacker_news.each do |item|
        = partial "item", :locals => { :item => item }


  %section#designer-news
    %header
      %h2
        Designer News
    %ul
      - data.designer_news.each do |item|
        = partial "item", :locals => { :item => item }

  %section#weather
    %header
      %h2
        Weather